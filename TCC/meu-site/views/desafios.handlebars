<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Desafios - Sistema TEA</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
     font-family: 'Roboto Mono', monospace;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      background-attachment: fixed;
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    /* Header */
    .header {
      text-align: center;
      color: white;
      margin-bottom: 40px;
    }

    .header h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 12px;
      text-shadow: 0 4px 12px rgba(0, 0, 0, 0.3);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 16px;
    }

    .header p {
      font-size: 1.2rem;
      opacity: 0.95;
    }

    /* Stats Cards */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .stat-card {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      border-radius: 20px;
      padding: 28px;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
      border: 2px solid rgba(255, 255, 255, 0.5);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .stat-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
    }

    .stat-icon {
      font-size: 2.5rem;
      margin-bottom: 12px;
      display: block;
    }

    .stat-value {
      font-size: 2.8rem;
      font-weight: 800;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 8px;
    }

    .stat-label {
      color: #495057;
      font-weight: 600;
      font-size: 1rem;
    }

    .level-progress {
      margin-top: 12px;
      background: #e9ecef;
      height: 8px;
      border-radius: 10px;
      overflow: hidden;
    }

    .level-progress-bar {
      height: 100%;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
      border-radius: 10px;
      transition: width 0.6s ease;
    }

    /* Tabs */
    .tabs {
      display: flex;
      gap: 12px;
      margin-bottom: 30px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .tab-btn {
      background: rgba(255, 255, 255, 0.95);
      border: none;
      padding: 14px 28px;
      border-radius: 14px;
      font-weight: 600;
      font-size: 1rem;
      color: #495057;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .tab-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .tab-btn.active {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      box-shadow: 0 6px 25px rgba(102, 126, 234, 0.4);
    }

    /* Desafios Grid */
    .desafios-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 24px;
      margin-bottom: 40px;
    }

    .desafio-card {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      border-radius: 24px;
      padding: 32px;
      position: relative;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 3px solid transparent;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    }

    .desafio-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    }

    .desafio-card.completado {
      border-color: #51cf66;
      background: linear-gradient(135deg, rgba(81, 207, 102, 0.08) 0%, rgba(55, 178, 77, 0.08) 100%);
    }

    .desafio-card.em-progresso {
      border-color: #ffd43b;
      background: linear-gradient(135deg, rgba(255, 212, 59, 0.08) 0%, rgba(250, 176, 5, 0.08) 100%);
    }

    .desafio-header {
      display: flex;
      align-items: flex-start;
      gap: 16px;
      margin-bottom: 20px;
    }

    .desafio-icon {
      width: 70px;
      height: 70px;
      border-radius: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2.2rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.35);
      flex-shrink: 0;
    }

    .desafio-card.completado .desafio-icon {
      background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
      box-shadow: 0 8px 25px rgba(81, 207, 102, 0.4);
    }

    .desafio-info {
      flex: 1;
    }

    .desafio-titulo {
      font-size: 1.35rem;
      font-weight: 700;
      color: #212529;
      margin-bottom: 6px;
    }

    .desafio-card.completado .desafio-titulo {
      color: #37b24d;
    }

    .desafio-descricao {
      color: #6c757d;
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .desafio-periodicidade {
      display: inline-block;
      background: #e9ecef;
      color: #495057;
      padding: 4px 12px;
      border-radius: 8px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      margin-top: 8px;
    }

    .desafio-periodicidade.diario {
      background: #fff3bf;
      color: #f59f00;
    }

    .desafio-periodicidade.semanal {
      background: #d3f9d8;
      color: #2b8a3e;
    }

    .desafio-progress {
      margin: 20px 0;
    }

    .progress-bar-container {
      background: #e9ecef;
      border-radius: 12px;
      height: 12px;
      overflow: hidden;
      margin-bottom: 10px;
    }

    .progress-bar {
      height: 100%;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
      border-radius: 12px;
      transition: width 0.6s ease;
      position: relative;
    }

    .desafio-card.completado .progress-bar {
      background: linear-gradient(90deg, #51cf66 0%, #37b24d 100%);
    }

    .progress-text {
      display: flex;
      justify-content: space-between;
      font-size: 0.9rem;
      font-weight: 600;
      color: #495057;
    }

    .desafio-card.completado .progress-text {
      color: #37b24d;
    }

    .desafio-reward {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      background: linear-gradient(135deg, #ffd43b 0%, #fab005 100%);
      color: #fff;
      padding: 12px;
      border-radius: 12px;
      font-weight: 700;
      font-size: 1.05rem;
      box-shadow: 0 4px 15px rgba(255, 212, 59, 0.3);
    }

    .check-badge {
      position: absolute;
      top: -12px;
      right: -12px;
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      box-shadow: 0 6px 20px rgba(81, 207, 102, 0.5);
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-10px); }
      60% { transform: translateY(-5px); }
    }

    /* Ranking */
    .ranking-container {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      border-radius: 24px;
      padding: 32px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    }

    .ranking-title {
      font-size: 2rem;
      font-weight: 700;
      color: #212529;
      margin-bottom: 24px;
      text-align: center;
    }

    .ranking-item {
      display: flex;
      align-items: center;
      gap: 16px;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 14px;
      margin-bottom: 12px;
      transition: all 0.3s ease;
    }

    .ranking-item:hover {
      transform: translateX(8px);
      background: #e9ecef;
    }

    .ranking-position {
      font-size: 1.8rem;
      font-weight: 800;
      min-width: 50px;
      text-align: center;
    }

    .ranking-position.top-1 { color: #ffd700; }
    .ranking-position.top-2 { color: #c0c0c0; }
    .ranking-position.top-3 { color: #cd7f32; }

    .ranking-info {
      flex: 1;
    }

    .ranking-name {
      font-size: 1.1rem;
      font-weight: 600;
      color: #212529;
      margin-bottom: 4px;
    }

    .ranking-stats {
      font-size: 0.85rem;
      color: #6c757d;
    }

    .ranking-points {
      font-size: 1.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* Notification */
    .notification {
      position: fixed;
      top: 30px;
      right: 30px;
      background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
      color: white;
      padding: 20px 28px;
      border-radius: 16px;
      box-shadow: 0 12px 40px rgba(81, 207, 102, 0.5);
      z-index: 10000;
      font-weight: 600;
      min-width: 320px;
      animation: slideInRight 0.5s ease-out;
    }

    @keyframes slideInRight {
      from {
        transform: translateX(120%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    .notification.hide {
      animation: slideOutRight 0.5s ease-out forwards;
    }

    @keyframes slideOutRight {
      to {
        transform: translateX(120%);
        opacity: 0;
      }
    }

    .notification-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 8px;
      font-size: 1.1rem;
    }

    .notification-body {
      font-size: 0.95rem;
      opacity: 0.95;
    }

    /* Loading */
    .loading {
      text-align: center;
      padding: 60px;
      color: white;
      font-size: 1.2rem;
    }

    .spinner {
      border: 4px solid rgba(255, 255, 255, 0.3);
      border-top: 4px solid white;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: white;
    }

    .empty-state-icon {
      font-size: 5rem;
      margin-bottom: 20px;
      opacity: 0.8;
    }

    .empty-state-text {
      font-size: 1.3rem;
      font-weight: 600;
      opacity: 0.9;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .header h1 {
        font-size: 2rem;
        flex-direction: column;
        gap: 8px;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      .desafios-grid {
        grid-template-columns: 1fr;
      }

      .tabs {
        flex-direction: column;
        gap: 8px;
      }

      .tab-btn {
        width: 100%;
      }

      .notification {
        left: 20px;
        right: 20px;
        min-width: auto;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üéØ Desafios <span id="userLevel" style="font-size: 0.7em; opacity: 0.9;"></span></h1>
      <p>Complete desafios, ganhe pontos e suba de n√≠vel!</p>
    </div>

    <!-- Stats -->
    <div class="stats-grid">
      <div class="stat-card">
        <span class="stat-icon">‚≠ê</span>
        <div class="stat-value" id="statPontos">0</div>
        <div class="stat-label">Pontos Totais</div>
      </div>
      
      <div class="stat-card">
        <span class="stat-icon">üèÜ</span>
        <div class="stat-value" id="statNivel">1</div>
        <div class="stat-label">N√≠vel Atual</div>
        <div class="level-progress">
          <div class="level-progress-bar" id="levelProgress" style="width: 0%"></div>
        </div>
      </div>
      
      <div class="stat-card">
        <span class="stat-icon">‚úÖ</span>
        <div class="stat-value" id="statCompletados">0</div>
        <div class="stat-label">Desafios Completados</div>
      </div>
      
      <div class="stat-card">
        <span class="stat-icon">üî•</span>
        <div class="stat-value" id="statStreak">0</div>
        <div class="stat-label">Dias Consecutivos</div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="tabs">
      <button class="tab-btn active" data-filter="todos">Todos os Desafios</button>
      <button class="tab-btn" data-filter="em-progresso">Em Progresso</button>
      <button class="tab-btn" data-filter="completado">Completados</button>
      <button class="tab-btn" data-filter="diario">Di√°rios</button>
      <button class="tab-btn" data-filter="semanal">Semanais</button>
    </div>

    <!-- Desafios Grid -->
    <div id="desafiosContainer">
      <div class="loading">
        <div class="spinner"></div>
        <div>Carregando desafios...</div>
      </div>
    </div>

    <!-- Ranking (oculto por padr√£o) -->
    <div id="rankingContainer" style="display: none;">
      <div class="ranking-container">
        <h2 class="ranking-title">üèÖ Ranking Global</h2>
        <div id="rankingList"></div>
      </div>
    </div>
  </div>

  <script>
    let desafios = [];
    let stats = {};
    let filtroAtual = 'todos';

    // Carregar dados do usu√°rio
    async function carregarDados() {
      try {
        // Registrar login do dia
        await fetch('/api/desafios/login', { method: 'POST' });

        // Carregar stats
        const statsRes = await fetch('/api/desafios/stats');
        stats = await statsRes.json();
        
        // Carregar desafios
        const desafiosRes = await fetch('/api/desafios');
        desafios = await desafiosRes.json();
        
        renderizarStats();
        renderizarDesafios();
      } catch (error) {
        console.error('Erro ao carregar dados:', error);
        document.getElementById('desafiosContainer').innerHTML = `
          <div class="empty-state">
            <div class="empty-state-icon">‚ö†Ô∏è</div>
            <div class="empty-state-text">Erro ao carregar desafios. Tente novamente.</div>
          </div>
        `;
      }
    }

    // Renderizar estat√≠sticas
    function renderizarStats() {
      document.getElementById('statPontos').textContent = stats.pontos_total || 0;
      document.getElementById('statNivel').textContent = stats.nivel || 1;
      document.getElementById('statCompletados').textContent = stats.desafios_completados || 0;
      document.getElementById('statStreak').textContent = stats.streak_dias || 0;
      document.getElementById('userLevel').textContent = `N√≠vel ${stats.nivel || 1}`;
      
      // Calcular progresso para pr√≥ximo n√≠vel
      const pontosAtual = stats.pontos_total || 0;
      const nivelAtual = stats.nivel || 1;
      const pontosProximoNivel = Math.pow(nivelAtual, 2) * 100;
      const pontosNivelAtual = Math.pow(nivelAtual - 1, 2) * 100;
      const progresso = ((pontosAtual - pontosNivelAtual) / (pontosProximoNivel - pontosNivelAtual)) * 100;
      
      document.getElementById('levelProgress').style.width = `${Math.min(progresso, 100)}%`;
    }

    // Renderizar desafios
    function renderizarDesafios() {
      const container = document.getElementById('desafiosContainer');
      
      // Filtrar desafios
      let desafiosFiltrados = desafios;
      
      if (filtroAtual === 'completado') {
        desafiosFiltrados = desafios.filter(d => d.completado === 1);
      } else if (filtroAtual === 'em-progresso') {
        desafiosFiltrados = desafios.filter(d => d.completado === 0 && d.progresso > 0);
      } else if (filtroAtual === 'diario' || filtroAtual === 'semanal') {
        desafiosFiltrados = desafios.filter(d => d.periodicidade === filtroAtual);
      }
      
      if (desafiosFiltrados.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-state-icon">üéØ</div>
            <div class="empty-state-text">Nenhum desafio encontrado nesta categoria</div>
          </div>
        `;
        return;
      }
      
      const grid = document.createElement('div');
      grid.className = 'desafios-grid';
      
      desafiosFiltrados.forEach(desafio => {
        const progresso = (desafio.progresso / desafio.meta) * 100;
        const statusClass = desafio.completado ? 'completado' : (desafio.progresso > 0 ? 'em-progresso' : '');
        
        const card = document.createElement('div');
        card.className = `desafio-card ${statusClass}`;
        
        card.innerHTML = `
          ${desafio.completado ? '<div class="check-badge">‚úì</div>' : ''}
          
          <div class="desafio-header">
            <div class="desafio-icon">${desafio.icone}</div>
            <div class="desafio-info">
              <div class="desafio-titulo">${desafio.nome}</div>
              <div class="desafio-descricao">${desafio.descricao}</div>
              ${desafio.periodicidade !== 'unico' ? `
                <span class="desafio-periodicidade ${desafio.periodicidade}">${desafio.periodicidade}</span>
              ` : ''}
            </div>
          </div>
          
          <div class="desafio-progress">
            <div class="progress-bar-container">
              <div class="progress-bar" style="width: ${progresso}%"></div>
            </div>
            <div class="progress-text">
              <span>${desafio.completado ? 'Completado!' : `${desafio.progresso}/${desafio.meta}`}</span>
              <span>${Math.round(progresso)}%</span>
            </div>
          </div>
          
          <div class="desafio-reward">
            <span>üåü</span>
            <span>${desafio.pontos} Pontos</span>
          </div>
        `;
        
        grid.appendChild(card);
      });
      
      container.innerHTML = '';
      container.appendChild(grid);
    }

    // Mostrar notifica√ß√£o
    function mostrarNotificacao(titulo, mensagem, icon = 'üéâ') {
      const notification = document.createElement('div');
      notification.className = 'notification';
      
      notification.innerHTML = `
        <div class="notification-header">
          <span style="font-size: 1.5rem;">${icon}</span>
          <span>${titulo}</span>
        </div>
        <div class="notification-body">${mensagem}</div>
      `;
      
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.classList.add('hide');
        setTimeout(() => {
          document.body.removeChild(notification);
        }, 500);
      }, 4000);
    }

    // Event listeners para tabs
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        filtroAtual = btn.dataset.filter;
        renderizarDesafios();
      });
    });

    // Verificar novos desafios completados periodicamente
    setInterval(async () => {
      const desafiosAntigos = [...desafios];
      await carregarDados();
      
      // Verificar se algum desafio foi completado
      desafios.forEach((desafio, index) => {
        const desafioAntigo = desafiosAntigos.find(d => d.id === desafio.id);
        if (desafioAntigo && !desafioAntigo.completado && desafio.completado) {
          mostrarNotificacao(
            'Desafio Completado!',
            `Voc√™ completou "${desafio.nome}" e ganhou ${desafio.pontos} pontos! üéâ`,
            desafio.icone
          );
        }
      });
    }, 30000); // Verificar a cada 30 segundos

    // Inicializar
    carregarDados();
  </script>
