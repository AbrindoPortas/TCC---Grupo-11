            <input type="text" id="nome" name="nome" placeholder="Digite seu nome completo" value="{{nome}}" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Digite seu email" value="{{email}}" required>

            <label for="senha">Senha</label>
            <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>

            <button type="submit">Cadastrar</button>
        </form>

