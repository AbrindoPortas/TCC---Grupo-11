<script>
    const emocoesConfig = {
        'ansioso': { cor: '#dc2626', label: 'üò∞ Ansioso', icone: 'üò∞' },
        'feliz': { cor: '#22c55e', label: 'üòä Feliz', icone: 'üòä' },
        'triste': { cor: '#3b82f6', label: 'üò¢ Triste', icone: 'üò¢' },
        'motivado': { cor: '#f59e0b', label: 'üí™ Motivado', icone: 'üí™' },
        'calmo': { cor: '#10b981', label: 'üòå Calmo', icone: 'üòå' },
        'estressado': { cor: '#ef4444', label: 'üò§ Estressado', icone: 'üò§' },
        'alegre': { cor: '#f97316', label: 'üéâ Alegre', icone: 'üéâ' },
        'preocupado': { cor: '#8b5cf6', label: 'üòü Preocupado', icone: 'üòü' }
    };

    function mudarTab(tipo) {
        document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.form-section').forEach(section => section.classList.remove('active'));
        
        event.target.classList.add('active');
        
        if (tipo === 'video') {
            document.getElementById('formVideoSection').classList.add('active');
        } else {
            document.getElementById('formTextoSection').classList.add('active');
        }
    }

    function mostrarAlerta(mensagem, tipo = 'success') {
        const alerta = document.getElementById('alertCustom');
        alerta.textContent = mensagem;
        alerta.className = `alert-custom alert-${tipo}`;
        alerta.style.display = 'block';

        setTimeout(() => {
            alerta.style.display = 'none';
        }, 3000);
    }

    async function adicionarMaterial(dados) {
        try {
            const response = await fetch('/admin/admmaterial', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(dados)
            });

            const result = await response.json();
            
            if (result.success) {
                mostrarAlerta('Material adicionado com sucesso!', 'success');
                setTimeout(() => location.reload(), 1500);
                return true;
            } else {
                mostrarAlerta(result.message || 'Erro ao adicionar material!', 'error');
                return false;
            }
        } catch (err) {
            console.error('Erro:', err);
            mostrarAlerta('Erro ao adicionar material!', 'error');
            return false;
        }
    }

    async function excluirMaterial(materialId) {
        try {
            const response = await fetch(`/admin/admmaterial/${materialId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });

            const result = await response.json();
            
            if (result.success) {
                mostrarAlerta('Material exclu√≠do com sucesso!', 'success');
                setTimeout(() => location.reload(), 1500);
                return true;
            } else {
                mostrarAlerta(result.message || 'Erro ao excluir material!', 'error');
                return false;
            }
        } catch (err) {
            console.error('Erro:', err);
            mostrarAlerta('Erro ao excluir material!', 'error');
            return false;
        }
    }

    function renderizarMateriais() {
        const materiaisPorEmocao = {{{json materiaisPorEmocao}}} || {};
        const container = document.getElementById('materiaisContainer');

        if (!materiaisPorEmocao || Object.keys(materiaisPorEmocao).length === 0) {
            container.innerHTML = `
                <div class="sem-materiais">
                    <div class="sem-materiais-icone">üìö</div>
                    <p>Nenhum material cadastrado ainda. Adicione o primeiro material acima!</p>
                </div>
            `;
            return;
        }

        let html = '';

        Object.keys(emocoesConfig).forEach(emocao => {
            const materiaisEmocao = materiaisPorEmocao[emocao] || [];
            
            if (materiaisEmocao.length > 0) {
                const config = emocoesConfig[emocao];
                
                html += `
                    <div class="emocao-group">
                        <div class="emocao-group-header">
                            <div class="emocao-group-icone">${config.icone}</div>
                            <h3 class="emocao-group-titulo">${config.label}</h3>
                            <span class="emocao-group-contador">${materiaisEmocao.length} ${materiaisEmocao.length === 1 ? 'material' : 'materiais'}</span>
                        </div>
                        
                        ${materiaisEmocao.map(material => `
                            <div class="material-item">
                                <div class="material-item-header">
                                    <div class="material-item-icone">${material.icone || (material.tipo === 'texto' ? 'üìñ' : 'üé¨')}</div>
                                    <div class="material-item-info">
                                        <span class="material-item-tipo ${material.tipo === 'texto' ? 'tipo-texto' : 'tipo-video'}">
                                            ${material.tipo === 'texto' ? 'üìù TEXTO' : 'üé¨ V√çDEO'}
                                        </span>
                                        <h4 class="material-item-titulo">${material.titulo}</h4>
                                        
                                        ${material.tipo === 'video' ? `
                                            <p class="material-item-descricao">${material.descricao || ''}</p>
                                            <div class="material-item-url">üîó ${material.url}</div>
                                        ` : `
                                            <div class="material-item-texto">${material.texto || ''}</div>
                                            ${material.fontes ? `<div class="material-item-fontes">üìö Fontes: ${material.fontes}</div>` : ''}
                                        `}
                                    </div>
                                </div>
                                <div class="material-item-actions">
                                    <button class="btn-excluir" onclick="confirmarExclusao(${material.id})">
                                        üóëÔ∏è Excluir
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                `;
            }
        });

        container.innerHTML = html || `
            <div class="sem-materiais">
                <div class="sem-materiais-icone">üìö</div>
                <p>Nenhum material cadastrado ainda. Adicione o primeiro material acima!</p>
            </div>
        `;
    }

    function confirmarExclusao(materialId) {
        if (confirm('Tem certeza que deseja excluir este material?')) {
            excluirMaterial(materialId);
        }
    }

    // FORM V√çDEO
    document.getElementById('formVideo').addEventListener('submit', async (e) => {
        e.preventDefault();

        const dados = {
            tipo: 'video',
            emocao: document.getElementById('emocaoVideoSelect').value,
            icone: document.getElementById('iconeVideoInput').value || 'üé¨',
            titulo: document.getElementById('tituloVideoInput').value,
            descricao: document.getElementById('descricaoVideoInput').value,
            url: document.getElementById('urlVideoInput').value
        };

        if (!dados.emocao || !dados.titulo || !dados.url) {
            mostrarAlerta('Por favor, preencha todos os campos obrigat√≥rios!', 'error');
            return;
        }

        const sucesso = await adicionarMaterial(dados);
        
        if (sucesso) {
            document.getElementById('formVideo').reset();
        }
    });

    // FORM TEXTO
    document.getElementById('formTexto').addEventListener('submit', async (e) => {
        e.preventDefault();

        const dados = {
            tipo: 'texto',
            emocao: document.getElementById('emocaoTextoSelect').value,
            icone: document.getElementById('iconeTextoInput').value || 'üìñ',
            titulo: document.getElementById('tituloTextoInput').value,
            texto: document.getElementById('textoInput').value,
            fontes: document.getElementById('fontesInput').value
        };

        if (!dados.emocao || !dados.titulo || !dados.texto) {
