            'triste': { cor: '#3b82f6', label: 'üò¢ Triste' },
            'motivado': { cor: '#f59e0b', label: 'üí™ Motivado' },
            'calmo': { cor: '#10b981', label: 'üòå Calmo' },
            'estressado': { cor: '#ef4444', label: 'üò§ Estressado' },
            'alegre': { cor: '#f97316', label: 'üéâ Alegre' },
            'preocupado': { cor: '#8b5cf6', label: 'üòü Preocupado' }
        };

        let emocoesData = {};

        // FUN√á√ÉO CORRIGIDA - USA O ID DO USU√ÅRIO DO SERVIDOR
        function getIdUsuario() {
            const userIdFromServer = '{{user.id_usuario}}';

            if (!userIdFromServer || userIdFromServer === '' || userIdFromServer === '{{user.id_usuario}}') {
                console.error('ID do usu√°rio n√£o encontrado! Verifique se o usu√°rio est√° autenticado.');
                return 'guest_user';
            }

            // Armazena o ID em uma chave global para ser acessado por outras p√°ginas
            localStorage.setItem('current_user_id', userIdFromServer);

            return userIdFromServer;
        }
        function carregarDadosUsuario() {
            const userId = getIdUsuario();
            const chaveId = `emocoes_${userId}_dashboard`;
            console.log('üîç Carregando dados do usu√°rio:', userId);
            console.log('üîë Usando chave:', chaveId);
            const dados = localStorage.getItem(chaveId);

            if (dados) {
                const dadosParsed = JSON.parse(dados);
                console.log('‚úÖ Dados carregados:', dadosParsed);
                return dadosParsed;
            }

            console.log('‚ö†Ô∏è Nenhum dado encontrado');
            return {};
        }


        function salvarDadosUsuario(dados) {
            const userId = getIdUsuario();
            const chaveId = `emocoes_${userId}_dashboard`;
            localStorage.setItem(chaveId, JSON.stringify(dados));
        }

        // Carrega os dados do usu√°rio espec√≠fico
        emocoesData = carregarDadosUsuario();

        document.querySelectorAll('.emocao-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                document.querySelectorAll('.emocao-btn').forEach(b => b.classList.remove('selected'));
                this.classList.add('selected');
                emocaoSelecionada = this.dataset.emocao;
                document.getElementById('textoSection').style.display = 'block';
            });
        });

        function registrarEmocao() {
            if (!emocaoSelecionada) {
                alert('Por favor, selecione como voc√™ est√° se sentindo!');
                return;
            }

            const hoje = new Date().toISOString().split('T')[0];
            const texto = document.getElementById('textoTiia').value.trim();

            emocoesData = carregarDadosUsuario();

            if (!emocoesData[hoje]) {
                emocoesData[hoje] = [];
            }

            emocoesData[hoje].push({
                emocao: emocaoSelecionada,
                texto: texto,
                timestamp: new Date().getTime()
            });

            salvarDadosUsuario(emocoesData);

            document.querySelectorAll('.emocao-btn').forEach(b => b.classList.remove('selected'));
            emocaoSelecionada = null;
            document.getElementById('textoTiia').value = '';
            document.getElementById('textoSection').style.display = 'none';

            atualizarGrafico();
            atualizarHistorico();

            const btn = document.querySelector('.registrar-btn');
            btn.textContent = 'Registrado! ‚úì';
            btn.style.background = '#22c55e';
            setTimeout(() => {
                btn.textContent = 'Registrar Como Me Sinto';
                btn.style.background = 'linear-gradient(135deg, #2563eb, #dc2626)';
            }, 2000);
        }

        function mostrarTextosEmocao(data, emocao) {
            const emocoesNoDia = emocoesData[data] || [];
            const textos = emocoesNoDia.filter(item => item.emocao === emocao);

            if (textos.length === 0) {
                alert(`Nenhum texto registrado para ${emocoesConfig[emocao].label}`);
                return;
            }

            const modal = document.getElementById('modalTextos');
            const titulo = document.getElementById('modalTitulo');
            const corpo = document.getElementById('modalCorpo');

            titulo.innerHTML = `${emocoesConfig[emocao].label}`;

            corpo.innerHTML = '';
            textos.forEach((item, i) => {
                const hora = new Date(item.timestamp).toLocaleTimeString('pt-BR', {
                    hour: '2-digit', minute: '2-digit'
                });
                const dataCompleta = new Date(item.timestamp).toLocaleDateString('pt-BR');

                const div = document.createElement('div');
                div.className = 'texto-item';
                div.innerHTML = `
            <div class="texto-hora">üìù Registro ${i + 1} ‚Ä¢ ${hora}</div>
            <div class="texto-conteudo ${!item.texto ? 'texto-vazio' : ''}">
                ${item.texto || '(Nenhuma descri√ß√£o foi escrita)'}
            </div>
        `;

                div.addEventListener('click', () => {
                    mostrarTextoCompleto(emocao, item.timestamp, dataCompleta, hora);
                });

                corpo.appendChild(div);
            });

            modal.classList.add('active');
        }

        function mostrarTextoCompleto(emocao, timestamp, data, hora) {
            const modal = document.getElementById('modalTextoCompleto');
            const titulo = document.getElementById('modalTextoTitulo');
            const corpo = document.getElementById('modalTextoCorpo');
            const info = document.getElementById('modalTextoInfo');

            let textoItem = null;
            for (let dia in emocoesData) {
                const encontrado = emocoesData[dia].find(item => item.timestamp === timestamp);
                if (encontrado) {
                    textoItem = encontrado;
                    break;
                }
            }

            if (!textoItem) return;

            titulo.innerHTML = `${emocoesConfig[emocao].label} - Texto Completo`;

            if (textoItem.texto) {
                corpo.textContent = textoItem.texto;
                corpo.classList.remove('texto-vazio');
            } else {
                corpo.textContent = '(Nenhuma descri√ß√£o foi escrita neste registro)';
                corpo.classList.add('texto-vazio');
            }

            info.innerHTML = `
        <span>üìÖ ${data}</span>
        <span>üïí ${hora}</span>
        <span>üìä ${emocoesConfig[emocao].label}</span>
    `;

            modal.classList.add('active');
        }

        function fecharModal(event) {
            if (event && event.target !== document.getElementById('modalTextos')) return;
            document.getElementById('modalTextos').classList.remove('active');
        }

        function fecharModalTextoCompleto(event) {
            if (event && event.target !== document.getElementById('modalTextoCompleto')) return;
            document.getElementById('modalTextoCompleto').classList.remove('active');
        }

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                fecharModal();
                fecharModalTextoCompleto();
            }
        });

        function atualizarGrafico() {
            emocoesData = carregarDadosUsuario();

            const hoje = new Date().toISOString().split('T')[0];
            const emocoesHoje = emocoesData[hoje] || [];

            if (emocoesHoje.length === 0) {
                document.getElementById('semDados').style.display = 'block';
                document.getElementById('graficoEmocoes').style.display = 'none';
                return;
            }

            document.getElementById('semDados').style.display = 'none';
            document.getElementById('graficoEmocoes').style.display = 'block';

            const contador = {};
            emocoesHoje.forEach(item => {
                contador[item.emocao] = (contador[item.emocao] || 0) + 1;
            });

            const labels = Object.keys(contador).map(e => emocoesConfig[e].label);
            const data = Object.values(contador);
            const cores = Object.keys(contador).map(e => emocoesConfig[e].cor);

            if (graficoEmocoes) graficoEmocoes.destroy();

            const ctx = document.getElementById('graficoEmocoes').getContext('2d');
            graficoEmocoes = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{ data: data, backgroundColor: cores, borderColor: '#fff', borderWidth: 2 }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: { display: true, text: 'Minhas Emo√ß√µes de Hoje', font: { size: 16, weight: 'bold' } },
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                afterLabel: () => 'Clique para ver os textos'
                            }
                        }
                    },
                    onClick: (e, elements) => {
                        if (elements.length > 0) {
                            const idx = elements[0].index;
                            const emocao = Object.keys(contador)[idx];
                            mostrarTextosEmocao(hoje, emocao);
                        }
                    }
                }
            });
        }

        function atualizarHistorico() {
            emocoesData = carregarDadosUsuario();

            const hoje = new Date().toISOString().split('T')[0];
            const dias = Object.keys(emocoesData).filter(d => d !== hoje && emocoesData[d].length > 0).sort().reverse();

            const grid = document.getElementById('historicoGrid');
            const semHist = document.getElementById('semHistorico');

            if (dias.length === 0) {
                semHist.style.display = 'block';
                grid.style.display = 'none';
                return;
            }

            semHist.style.display = 'none';
            grid.style.display = 'grid';
            grid.innerHTML = '';

            Object.values(graficosHistoricos).forEach(g => g && g.destroy());
            graficosHistoricos = {};

            dias.forEach(dia => {
                const emocoesDia = emocoesData[dia];
                const canvasId = `grafico-${dia}`;

                const item = document.createElement('div');
                item.className = 'historico-item';
                item.innerHTML = `
            <div class="historico-data">${new Date(dia + 'T00:00').toLocaleDateString('pt-BR')}</div>
            <div class="historico-grafico">
                <canvas id="${canvasId}"></canvas>
            </div>
        `;
                grid.appendChild(item);

                setTimeout(() => {
                    const contador = {};
                    emocoesDia.forEach(item => {
                        contador[item.emocao] = (contador[item.emocao] || 0) + 1;
                    });

                    const labels = Object.keys(contador).map(e => emocoesConfig[e].label);
                    const data = Object.values(contador);
                    const cores = Object.keys(contador).map(e => emocoesConfig[e].cor);

                    const ctx = document.getElementById(canvasId).getContext('2d');
                    graficosHistoricos[dia] = new Chart(ctx, {
                        type: 'pie',
                        data: {
                            labels: labels,
                            datasets: [{ data: data, backgroundColor: cores, borderColor: '#fff', borderWidth: 1 }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    callbacks: {
                                        afterLabel: () => 'Clique para ver os textos'
                                    }
                                }
                            },
                            onClick: (e, elements) => {
                                if (elements.length > 0) {
                                    const idx = elements[0].index;
                                    const emocao = Object.keys(contador)[idx];
                                    mostrarTextosEmocao(dia, emocao);
                                }
                            }
                        }
                    });
                }, 100);
            });
        }

        function fecharNotificacao() {
            document.getElementById('eventoNotificacao').style.display = 'none';
        }

        // FUN√á√ÉO CORRIGIDA - USA CHAVE ESPEC√çFICA DO USU√ÅRIO PARA AGENDA
        function verificarEventosHoje() {
            const hoje = new Date();
            const ano = hoje.getFullYear();
            const mes = String(hoje.getMonth() + 1).padStart(2, '0');
            const dia = String(hoje.getDate()).padStart(2, '0');
            const dataHoje = `${ano}-${mes}-${dia}`;

            const userId = getIdUsuario();
            const notifKey = `notif_eventos_${userId}_${dataHoje}`;

            // Verifica se j√° mostrou a notifica√ß√£o hoje
            if (localStorage.getItem(notifKey)) {
                return;
            }

            // CORRIGIDO: Usa chave espec√≠fica do usu√°rio
            const STORAGE_KEY = `mini_agenda_events_${userId}_v1`;
            const eventos = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');

            // Filtra eventos que s√£o do dia de hoje
            const eventosHoje = eventos.filter(e => e.data === dataHoje);

            // S√≥ mostra se tiver eventos do usu√°rio logado
            if (eventosHoje.length > 0) {
                const notificacao = document.getElementById('eventoNotificacao');
                const textoElement = notificacao.querySelector('.evento-texto p');

                if (eventosHoje.length === 1) {
                    textoElement.textContent = `Voc√™ tem 1 compromisso hoje: "${eventosHoje[0].titulo}"`;
                } else {
                    textoElement.textContent = `Voc√™ tem ${eventosHoje.length} compromissos hoje. Confira sua agenda!`;
                }

                notificacao.style.display = 'block';

                // Marca que j√° mostrou a notifica√ß√£o hoje
                localStorage.setItem(notifKey, 'true');

                // Fecha automaticamente ap√≥s 10 segundos
                setTimeout(() => {
                    fecharNotificacao();
                }, 10000);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Carrega os dados do usu√°rio espec√≠fico ao iniciar
            emocoesData = carregarDadosUsuario();
            atualizarGrafico();
            atualizarHistorico();
            verificarEventosHoje();
        });
    </script>
